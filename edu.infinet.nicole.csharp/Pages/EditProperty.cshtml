@page "/EditProperty/{id:int}"
@model EditPropertyModel

<h1>Editar Propriedade</h1>

<form method="post">
    <input type="hidden" asp-for="PropertyId" />
    
    <div class="form-group mb-3">
        <label asp-for="PropertyName">Nome da Propriedade:</label>
        <input asp-for="PropertyName" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="PropertyCityId">Cidade:</label>
        <select asp-for="PropertyCityId" class="form-select" required>
            <option value="">-- Selecione uma cidade --</option>
            @foreach (var city in Model.Cities)
            {
                <option value="@city.Id">@city.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a href="/" class="btn btn-secondary">Cancelar</a>
</form>