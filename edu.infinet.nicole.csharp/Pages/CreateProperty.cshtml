@page
@model CreatePropertyModel

<h1>Nova Propriedade</h1>

<form method="post">
    <div>
        <label>Nome:</label>
        <input asp-for="PropertyName" required />
    </div>
    
    <div>
        <label>Cidade:</label>
        <select asp-for="CityId" required>
            <option value="">Selecione</option>
            @foreach (var city in Model.Cities)
            {
                <option value="@city.Id">@city.Name</option>
            }
        </select>
    </div>
    
    <button type="submit">Salvar</button>
    <a href="/">Cancelar</a>
</form>