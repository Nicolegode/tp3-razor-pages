@page
@model IndexModel
@{
    ViewData["Title"] = "Cities";
}

@foreach (var city in Model.Cities)
{
    <div>
        <h3>@city.Name - @city.Country?.Name</h3>
        
        @if (city.Properties.Any())
        {
            <ul>
                @foreach (var property in city.Properties)
                {
                    <li>@property.Name</li>
                }
            </ul>
        }
    </div>
    <hr />
}